<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
>
    <data>
        <variable
            name="asteroidProperty"
            type="com.udacity.asteroidradar.Asteroid" />
    </data>

    <LinearLayout
        android:layout_margin="8dp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/cardview_light_background"
            tools:text="id of the asteroid"
            android:text="@{String.valueOf(asteroidProperty.id)}"
            android:layout_margin="5dp"
            android:id="@+id/idOfAsteroid"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/cardview_light_background"
            tools:text="close approach date"
            android:text="@{asteroidProperty.closeApproachDate}"
            android:layout_margin="5dp"
            android:id="@+id/closeApproachDate"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</layout>
